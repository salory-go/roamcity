.page {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .header {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 5%;
    background-color: #1aad4a;
  }
  
  .title-text {
    color: #ffffff;
    font-size: 20px;
    font-weight: bold;
  }
  
  .notification-list {
    height: 95%;
    background-color: #f5f5f5;
  }
  
  .notification-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 15px;
    border-bottom: 1px solid #e5e5e5;
  }
  
  .notification-avatar {
    width: 60px;
    marginRight: 15px;
  }
  
  .avatar-img {
    width: 100%;
    border-radius: 50%;
  }
  
  .notification-content {
    flex: 1;
  }
  
  .time {
    font-size: 12px;
    color: #999999;
  }
  
  .message {
    font-size: 14px;
    margin-top: 5px;
  }