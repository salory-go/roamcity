page{
    height:100%;
  }

  .background {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
  }
  
.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.start {
    position: fixed;
    top: 15%;
    left: 30%;
    width: 200rpx;
    height: 200rpx;
}

.props {
    position: fixed;
    top: 85%;
    left: 5%;
    width: 200rpx;
    height: 200rpx;
}

.window {
    position: fixed;
    width: 90%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.2);
    z-index: 999;
}

.info{
    position: fixed;
    width: 90%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.2);
    z-index: 999;
}

.props-item {
    width: 30%;
    display: inline-block;
    padding: 10rpx;
}

.props-image {
    width: 100%;
    height: 200rpx;
}

.props-text {
    font-size: 28rpx;
    margin-left: 20%;
}

.text {
    font-size: 28rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.close-button {
    width: 100%;
    background-color: #007aff;
    color: #fff;
    font-size: 28rpx;
    border-radius: 5rpx;
    padding: 10rpx;
    text-align: center;
    margin-top: 300rpx;
}