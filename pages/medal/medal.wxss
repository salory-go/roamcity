/* pages/medal/medal.wxss */
.header{
    display: flex;
    font-size: 45rpx;
    font-weight: bold;
    align-items: center;
    justify-content: left;
    height: 270rpx;
    background: rgb(44, 172, 231);
}

.header text{
    margin-left: 80rpx;
    margin-right: 200rpx;
    width: 30%;
    color: #ffff;
}

.header image{
    height:270rpx;
    width: 20%;
}

.c1{
    background: #efefef;
    height: 60rpx;
    display: flex;
}

.c1 text{
    height: 60rpx;
    font-size: 26rpx;
    margin-left: 30rpx;
    padding-top: 20rpx;
    color: #999999;
}

.medal-list{
    display: flex;
    flex-wrap: wrap;
    border-top: 1rpx solid #efefef;
    border-left: 1rpx solid #efefef;
}
.medal-item{
    width: 50%;
    height: 300rpx;
    /* padding: 20rpx; */
    border: 1rpx solid #efefef;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}
.medal-item image{
    flex:1;
    width: 70%;
    padding: 20rpx;
    height: 200rpx;
    border-radius: 50%;
    object-fit: cover; /* 图片铺满，保持比例 */
}
.medal-item text{
    font-size: 24rpx;
    text-align: left;
    font-family: "SimSun", Arial, sans-serif;
    line-height: 1.5;
}

.title{
    position: absolute;
    z-index: 5;
    left: 30rpx;
    bottom: 50rpx;
  }
.h1{
    font-size: 60rpx;
    font-weight: bold;
  }
.detail{
    color: rgba(255, 255, 255, .8);
    font-size: 22rpx;
  }
  .list{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-content: flex-start;
    align-items: center;
    padding: 0 20rpx;
    margin-bottom: 28rpx;
  }
  .medal{
    color: #fff;
    position: relative;
    margin-bottom: 12rpx;
  }
  .medal image{
    width: 349rpx;
    height: 349rpx;
    border-radius: 8rpx;
    vertical-align: bottom;
  }
  .medal .mask{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    border-radius: 0 0 8rpx 8rpx;
    background-image: linear-gradient(to top,rgba(0, 0, 0, .8),rgba(0, 0, 0, 0));
    z-index: 1;
  }
  .medal .info{
    position: absolute;
    left: 28rpx;
    bottom: 0rpx;
    z-index: 2;
  }
  .medal .title{
    font-size: 32rpx;
    width: 200rpx;
    left: 0;
    bottom: 0;
    height: 90rpx;
    font-weight: bold;
    text-shadow: 2rpx 4rpx rgba(0, 0, 0, .12);
  }

